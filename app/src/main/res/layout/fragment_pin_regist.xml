<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.password.register.PinRegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputlayout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_shape"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <com.baidu.infinity.ui.view.PXDInputView
            android:id="@+id/usernameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:hint_text="请输入用户名"
            app:info_text="用户名"
            app:input_type="text"
            app:layout_constraintTop_toTopOf="parent" />

        <com.baidu.infinity.ui.view.PXDInputView
            android:id="@+id/passweordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:hint_text="请输入密码"
            app:info_text="密码"
            app:input_type="password"
            app:layout_constraintTop_toBottomOf="@id/usernameView" />

        <com.baidu.infinity.ui.view.PXDInputView
            android:id="@+id/surePassweordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:hint_text="请确认密码"
            app:info_text="确认密码"
            app:input_type="password"
            app:layout_constraintTop_toBottomOf="@id/passweordView" />

        <Button
            android:id="@+id/switchButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:enabled="false"
            android:text="注册图案密码"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surePassweordView" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>