<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">
    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="@dimen/layer_corner"
        app:shape_roundRect_bottomRightRadius="@dimen/layer_corner"
        app:shape_roundRect_topLeftRadius="@dimen/layer_corner"
        app:shape_roundRect_topRightRadius="@dimen/layer_corner">
        <ImageView
            android:id="@+id/ivLayer"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="75dp"/>
    </io.github.florent37.shapeofview.shapes.RoundRectView>

    <View
        android:id="@+id/coverView"
        android:visibility="invisible"
        android:background="@drawable/layer_outline_corner_shape"
        android:layout_width="120dp"
        android:layout_height="75dp"/>
</FrameLayout>