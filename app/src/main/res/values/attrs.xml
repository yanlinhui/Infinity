<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  只能在xml中使用-->
    <declare-styleable name="PXDInputView">
        <attr name="info_text" format="string|reference"/>
        <attr name="hint_text" format="string|reference"/>
        <attr name="input_type" format="enum">
            <enum name="text" value="0"/>
            <enum name="password" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleIconView">
        <attr name="icon_size_sp" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="PXDSeekBarView">
        <attr name="min" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="orientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
    </declare-styleable>
</resources>